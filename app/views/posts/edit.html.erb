<h1>Editing post</h1>

<%= form_for @post, :url => { :controller => 'posts', :action => 'update', :id => @post } do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit "更新"%>
    </p>
<% end %>
<p>
<%= link_to 'Show', @post %> | <%= link_to 'Back', posts_path %>
</p>